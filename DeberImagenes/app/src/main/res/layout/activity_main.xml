<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/iv_foto"
        android:layout_width="374dp"
        android:layout_height="275dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background"
        tools:ignore="MissingConstraints"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btnTomarFoto"
        android:layout_width="306dp"
        android:layout_height="41dp"
        android:layout_marginTop="116dp"
        android:text="Tomar Foto"
        app:layout_constraintEnd_toEndOf="@+id/iv_foto"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="@+id/iv_foto"
        app:layout_constraintTop_toBottomOf="@+id/iv_foto"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnSeleccionarFoto"
        android:layout_width="306dp"
        android:layout_height="41dp"
        android:layout_marginTop="12dp"
        android:text="Seleccionar Foto"
        app:layout_constraintEnd_toEndOf="@+id/btnTomarFoto"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnTomarFoto"
        app:layout_constraintTop_toBottomOf="@+id/btnTomarFoto"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_firestore"
        android:layout_width="306dp"
        android:layout_height="41dp"
        android:layout_marginTop="64dp"
        android:text="Enviar a Firestore"
        app:layout_constraintEnd_toEndOf="@+id/btnTomarFoto"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnTomarFoto"
        app:layout_constraintTop_toBottomOf="@+id/btnTomarFoto"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_descargar"
        android:layout_width="306dp"
        android:layout_height="41dp"
        android:layout_marginTop="176dp"
        android:text="Descargar"
        app:layout_constraintEnd_toEndOf="@+id/btnTomarFoto"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnTomarFoto"
        app:layout_constraintTop_toBottomOf="@+id/btnTomarFoto"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/ev_descargar"
        android:layout_width="307dp"
        android:layout_height="41dp"
        android:layout_marginTop="124dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/btnTomarFoto"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnTomarFoto"
        app:layout_constraintTop_toBottomOf="@+id/btnTomarFoto" />


</androidx.constraintlayout.widget.ConstraintLayout>